# =============================================================================
# Baasix Production Environment Configuration
# =============================================================================
# Production-optimized settings - update with your actual values

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
NODE_ENV=production
PORT=8056
SECRET_KEY=your-production-secret-key-min-32-chars-CHANGE-THIS
COOKIE_SECRET=your-production-cookie-secret-CHANGE-THIS

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------
DB_HOST=your-db-host.example.com
DB_PORT=5432
DB_NAME=baasix_production
DB_USER=baasix_user
DB_PASSWORD=secure_production_password
DB_SSL=true
DB_POOL_MIN=5
DB_POOL_MAX=20

# -----------------------------------------------------------------------------
# Redis Cache Configuration
# -----------------------------------------------------------------------------
CACHE_ENABLED=true
CACHE_REDIS_URL=redis://your-redis-host:6379
CACHE_TTL=300000

# -----------------------------------------------------------------------------
# CORS & Security
# -----------------------------------------------------------------------------
AUTH_CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
AUTH_CORS_ALLOW_ANY_PORT=false
AUTH_CORS_CREDENTIALS=true

# -----------------------------------------------------------------------------
# Rate Limiting (more restrictive in production)
# -----------------------------------------------------------------------------
RATE_LIMIT=50
RATE_LIMIT_INTERVAL=5000

# -----------------------------------------------------------------------------
# Session & Cookies (secure in production)
# -----------------------------------------------------------------------------
SESSION_TIMEOUT=3600
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict

# -----------------------------------------------------------------------------
# File Storage Configuration
# -----------------------------------------------------------------------------
STORAGE_DEFAULT_SERVICE=s3
S3_STORAGE_ACCESS_KEY_ID=your-access-key-id
S3_STORAGE_SECRET_ACCESS_KEY=your-secret-access-key
S3_STORAGE_REGION=us-east-1
S3_STORAGE_BUCKET=your-production-bucket
S3_STORAGE_ENDPOINT=https://s3.amazonaws.com
MAX_FILE_SIZE=52428800

# -----------------------------------------------------------------------------
# Email Configuration
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your-production-smtp-password
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Your App Name

# -----------------------------------------------------------------------------
# Logging & Debugging (minimal in production)
# -----------------------------------------------------------------------------
DEBUGGING=false
LOG_LEVEL=error

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
PUBLIC_REGISTRATION=false
