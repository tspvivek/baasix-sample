# =============================================================================
# Baasix Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=8056
SECRET_KEY=your-super-secret-jwt-key-min-32-chars-change-this
COOKIE_SECRET=your-cookie-secret-key-change-this

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_NAME=baasix
DB_USER=postgres
DB_PASSWORD=yourpassword
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# -----------------------------------------------------------------------------
# Redis Cache Configuration
# -----------------------------------------------------------------------------
CACHE_ENABLED=true
CACHE_REDIS_URL=redis://localhost:6379
CACHE_TTL=300000

# -----------------------------------------------------------------------------
# CORS & Security
# -----------------------------------------------------------------------------
AUTH_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
AUTH_CORS_ALLOW_ANY_PORT=true
AUTH_CORS_CREDENTIALS=true

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT=100
RATE_LIMIT_INTERVAL=5000

# -----------------------------------------------------------------------------
# Session & Cookies
# -----------------------------------------------------------------------------
SESSION_TIMEOUT=3600
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# -----------------------------------------------------------------------------
# Multi-tenant Configuration (Optional)
# -----------------------------------------------------------------------------
MULTI_TENANT=false
TENANT_FIELD=tenant_id

# -----------------------------------------------------------------------------
# Socket.IO Configuration (Optional)
# -----------------------------------------------------------------------------
SOCKET_ENABLED=true
SOCKET_PATH=/socket.io
SOCKET_CORS_ENABLED_ORIGINS=http://localhost:3000

# -----------------------------------------------------------------------------
# File Storage Configuration
# -----------------------------------------------------------------------------
STORAGE_DEFAULT_SERVICE=local
LOCAL_STORAGE_PATH=./uploads
MAX_FILE_SIZE=52428800

# For AWS S3 Storage (uncomment if using S3)
# STORAGE_DEFAULT_SERVICE=s3
# S3_STORAGE_ACCESS_KEY_ID=your-access-key-id
# S3_STORAGE_SECRET_ACCESS_KEY=your-secret-access-key
# S3_STORAGE_REGION=us-east-1
# S3_STORAGE_BUCKET=your-bucket-name
# S3_STORAGE_ENDPOINT=https://s3.amazonaws.com

# -----------------------------------------------------------------------------
# Email Configuration (Optional)
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@yourdomain.com
SMTP_PASSWORD=your-email-password
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Your App Name

# -----------------------------------------------------------------------------
# SSO & Social Authentication (Optional)
# -----------------------------------------------------------------------------
# Enable authentication services (comma-separated)
# AUTH_SERVICES_ENABLED=LOCAL,GOOGLE,GITHUB,FACEBOOK,APPLE

# Google OAuth
# GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret

# Facebook OAuth
# FACEBOOK_CLIENT_ID=your-facebook-app-id
# FACEBOOK_CLIENT_SECRET=your-facebook-app-secret

# Apple Sign In
# APPLE_CLIENT_ID=your-apple-service-id
# APPLE_TEAM_ID=your-apple-team-id
# APPLE_KEY_ID=your-apple-key-id
# APPLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"

# Allowed application URLs for OAuth redirects
# AUTH_APP_URL=https://app.yourdomain.com

# -----------------------------------------------------------------------------
# Logging & Debugging
# -----------------------------------------------------------------------------
DEBUGGING=true
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
PUBLIC_REGISTRATION=true
